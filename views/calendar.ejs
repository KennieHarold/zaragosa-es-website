<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>

  <body class="main-layout">
    <!-- Tabs -->
    <%- include('partials/admin-tabs.ejs') %>
    <!-- End tabs -->

    <div class="w-50 p-5">
      <div class="form-group">
        <label for="event-name-input">Event Name:</label>
        <input type="text" class="form-control" id="event-name-input" placeholder="Enter event name" />
      </div>
      <div class="form-group" style="margin-bottom: 3em">
        <label for="event-date-input">Date:</label>
        <input type="date" class="form-control" id="event-date-input" placeholder="Enter date" />
      </div>

      <button id="add-event-btn" class="btn btn-primary">
        <i class="fa fa-save" style="margin-right: 0.5em"></i>Add/Update Event
      </button>
    </div>

    <%- include('partials/scripts.ejs') %>
    <script src="<%= domainName %>/js/admin.js"></script>
    <script>
      var path = '<%= path %>';
    </script>
  </body>
</html>
